{% extends 'layouts/base.html.twig' %}

{% block title 'login !' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 text-center">Veillez vous connecter</h1>
            <p class="mb-3 text-center text-muted">Vos pins vous attendent</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-error rounded mb-3 " role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

               <div class="form-group">
                   <label for="email">Email</label>
                   <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
               </div>

               <div class="form-group">
                   <label for="inputPassword">Password</label>
                   <input type="password" name="password" id="inputPassword" class="form-control" required>
               </div>

                <div class="d-flex justify-content-between">
                    <div class="form-check">
                        <div class="checkbox mb-3">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" name="_remember_me" id="remember_me">
                                    Souvenir de moi
                            </label>
                        </div>
                    </div>
                    <a href="#">Mot de passe oublié ?</a>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-block btn-primary" type="submit">
                    Sign in
                </button>

                <p class="mt-5 mb-3 text-center text-muted">
                    Vous n'êtes pas connecter maintenant? <a href="{{ path('app_register') }}">Créer un compte</a>
                </p>
            </form>
        </div>
    </div>
{% endblock %}
